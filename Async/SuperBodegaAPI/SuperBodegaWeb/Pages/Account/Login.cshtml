@page
@model SuperBodegaWeb.Pages.Account.LoginModel
@{
    Layout = "_Layout";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card bg-dark text-white border-0 shadow-lg rounded-4">
                <div class="card-body px-4 py-5 text-center">
                    <div class="mb-4">
                        <i class="fa-solid fa-circle-user fa-4x text-primary mb-3"></i>
                        <h4 class="fw-bold">Bienvenido</h4>
                        <p class="text-muted small">Ingresa tus credenciales para continuar</p>
                    </div>

                    <form method="post">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="mb-3 text-start">
                            <label asp-for="Username" class="form-label text-white">Correo electrónico</label>
                            <input asp-for="Username"
                                   class="form-control bg-black text-white border-secondary rounded-pill px-4"
                                   placeholder="tú@correo.com" />
                        </div>

                        <div class="mb-4 text-start">
                            <label asp-for="Password" class="form-label text-white">Contraseña</label>
                            <input asp-for="Password" type="password"
                                   class="form-control bg-black text-white border-secondary rounded-pill px-4"
                                   placeholder="••••••••" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold shadow-sm animated-btn">
                                <i class="fa-solid fa-arrow-right-to-bracket me-2"></i> Entrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .animated-btn {
            transition: all 0.25s ease;
        }

        .animated-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 123, 255, 0.3);
        }

        .form-control::placeholder {
            color: #aaa;
        }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }
    </style>
}
