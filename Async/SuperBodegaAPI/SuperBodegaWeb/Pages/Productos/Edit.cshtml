@page "{id:int}"
@model SuperBodegaWeb.Pages.Productos.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<section class="container py-4">
  <h2 class="text-center text-primary mb-4">
    <i class="fa-solid fa-pen-to-square me-2"></i>Editar Producto
  </h2>

  @if (!string.IsNullOrEmpty(Model.ErrorMessage))
  {
    <div class="alert alert-danger">@Model.ErrorMessage</div>
  }

  <form method="post" class="mx-auto" style="max-width:600px;">
    <input type="hidden" asp-for="Product.Id" />

    <div class="mb-3">
      <label asp-for="Product.Nombre" class="form-label"></label>
      <input asp-for="Product.Nombre" class="form-control" />
      <span asp-validation-for="Product.Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Product.Precio" class="form-label"></label>
      <input asp-for="Product.Precio" class="form-control" type="number" step="0.01" />
      <span asp-validation-for="Product.Precio" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Product.Stock" class="form-label"></label>
      <input asp-for="Product.Stock" class="form-control" type="number" />
      <span asp-validation-for="Product.Stock" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Product.Categoria" class="form-label"></label>
      <input asp-for="Product.Categoria" class="form-control" />
      <span asp-validation-for="Product.Categoria" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Product.ImagenUrl" class="form-label"></label>
      <input asp-for="Product.ImagenUrl" class="form-control" />
      <span asp-validation-for="Product.ImagenUrl" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Product.ProveedorId" class="form-label">Proveedor</label>
      <select asp-for="Product.ProveedorId" class="form-select" asp-items="Model.Providers">
        <option value="">-- Selecciona --</option>
      </select>
      <span asp-validation-for="Product.ProveedorId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary ms-2">Cancelar</a>
  </form>
</section>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
