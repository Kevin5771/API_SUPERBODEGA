@page
@model SuperBodegaWeb.Pages.Proveedores.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<section class="container py-4">
  <h2 class="mb-4 text-center text-primary">
    <i class="fa-solid fa-truck me-2"></i>Proveedores
  </h2>

  @if (Model.Mensaje != null)
  {
    <div class="alert alert-success">@Model.Mensaje</div>
  }
  @if (Model.Error != null)
  {
    <div class="alert alert-danger">@Model.Error</div>
  }

  <div class="d-flex justify-content-end mb-3">
    <!-- Botón para exportar Excel -->
    <a asp-page-handler="ExportarExcel"
       class="btn btn-success me-2">
      <i class="fa-solid fa-file-excel me-1"></i>Exportar Excel
    </a>
    <a asp-page="Create" class="btn btn-success">
      <i class="fa-solid fa-plus me-1"></i>Nuevo Proveedor
    </a>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Id</th><th>Nombre</th><th>Email</th><th>Teléfono</th><th class="text-center">Acciones</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var p in Model.Proveedores)
      {
        <tr>
          <td>@p.Id</td>
          <td>@p.Nombre</td>
          <td>@p.Email</td>
          <td>@p.Telefono</td>
          <td class="text-center">
            <a asp-page="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary me-1">
              <i class="fa-solid fa-edit"></i>
            </a>
            <form method="post"
                  asp-page-handler="Delete"
                  asp-route-id="@p.Id"
                  class="d-inline">
              <button type="submit" class="btn btn-sm btn-outline-danger">
                <i class="fa-solid fa-trash-can"></i>
              </button>
            </form>
          </td>
        </tr>
      }
    </tbody>
  </table>
</section>
